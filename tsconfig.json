  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "build",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2015"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    ".git",
    "build",
    "node_modules"
  ]
}
